{
  "compilerOptions": {
    "allowJs": true, // 允许在项目中编译JS文件
    "checkJs": false, // 检查JS文件
    "declaration": false, // 是否生成对应的d.ts文件
    "charset": "utf8", // 字符编码
    "target": "esnext", // 生成的js文件版本
    "module": "esnext", // 模块化
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true, // 装饰器
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitUseStrict": false,
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    // 指定编译的文件类型
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
